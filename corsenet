# Create the Conv2D layer
filter_img_real_layer = Conv2D(filters_cos.shape[3], 
                               (filters_cos.shape[0], filters_cos.shape[1]), 
                               padding='same', 
                               name='enh_img_real_1')

# Set the weights for the layer
filter_img_real_layer.build(input_shape=img_input.shape)
filter_img_real_layer.set_weights([filters_cos, np.zeros([filters_cos.shape[3]])])

# Apply the layer to the input
filter_img_real = filter_img_real_layer(img_input)
