import os
from PIL import Image
import pytesseract

# Specify the folder where your images are located
folder_path = 'path/to/your/folder'  # Replace with the path to your folder

# Optionally, set the path to the Tesseract executable (for Windows)
# pytesseract.pytesseract.tesseract_cmd = r'C:\Program Files\Tesseract-OCR\tesseract.exe'

# Iterate through all files in the folder
for filename in os.listdir(folder_path):
    # Check if the file is an image (you can filter by extensions like .png, .jpg, etc.)
    if filename.lower().endswith(('.png', '.jpg', '.jpeg')):
        # Construct full image path
        image_path = os.path.join(folder_path, filename)

        # Open the image
        img = Image.open(image_path)

        # Extract text from the image
        text = pytesseract.image_to_string(img)

        # Print the image name and corresponding extracted text
        print(f"Image: {filename}")
        print(f"Extracted Text: {text}")
        print("-" * 50)  # Separator line for readability
